# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,www.your-domain.com

# Database Switch
# USE_POSTGRES=False => Use SQLite from api_db volume (~60 users data)
# USE_POSTGRES=True  => Use PostgreSQL from db service (empty or migrated data)
USE_POSTGRES=True

# PostgreSQL Configuration (only used when USE_POSTGRES=True)
POSTGRES_DB=heritage_db
POSTGRES_USER=heritage_user
POSTGRES_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql://heritage_user:your-secure-password-here@db:5432/heritage_db

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
FEEDBACK_EMAIL=admin@yourdomain.com

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-domain.com,https://www.your-domain.com

# Production domain
DOMAIN=your-domain.com