# Production Environment Variables
# Copy this to .env for production deployment

# Django Settings - CHANGE THESE FOR SECURITY!
DJANGO_SECRET_KEY=your-super-secure-random-secret-key-here-change-this-immediately
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-vps-ip-here

# Database - PostgreSQL for Production
USE_POSTGRES=True
POSTGRES_DB=heritage_db
POSTGRES_USER=heritage_user
POSTGRES_PASSWORD=your-very-secure-postgres-password-here

# Email Settings - Configure your email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
FEEDBACK_EMAIL=admin@yourdomain.com

# CORS Settings - Only allow your domain
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Production Domain
DOMAIN=your-domain.com